{{> header}}

{{> add-user}}

<section class="section feather-bg-img" style="background-image: url(images/features-bg-img-1.png)"
         id="Researchers">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="text-center mb-5">
                    <h3 class="title mb-3">Our Researchers</h3>
                </div>
            </div>
        </div>
        <hr>
        {{#researchers}}
        <div class="row align-items-center">
            <div class="col-sm-3 ">
                <div class="mt-4 mt-lg-0">
                    <img src="{{imageUrl}}" alt=""
                         class="img-thumbnail d-block mx-auto" width="180px">
                </div>
            </div>
            <div class="col-sm-9">
                <h3 class="font-weight-semibold line-height-1_4 mb-4"><b>{{firstName}} {{lastName}}</b>
                </h3>
                <p class="text-muted font-size-16 mb-4">{{description}}
                </p>
            </div>
        </div>
        {{/researchers}}
    </div>
</section>
<!-- Researchers end -->
{{> footer}}